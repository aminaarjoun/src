<Window x:Class="PruebaSkins.Principal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Uso de skins, por JP" Height="277" Width="330" Initialized="Window_Initialized" Closing="Window_Closing" Style="{DynamicResource WinStyle}" >
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Style="{DynamicResource LabelStyle}">Skin:</Label>
            <ComboBox Style="{DynamicResource ComboStyle}" Width="200" Name="cboSkin" SelectionChanged="cboSkin_SelectionChanged" ></ComboBox>
        </StackPanel>

        <StackPanel Margin="0,40,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Style="{DynamicResource LabelStyle}">Nombre:</Label>
            <TextBox Style="{DynamicResource TextBoxStyle}" Width="200" Name="txtNombre"></TextBox>
        </StackPanel>
        
        <Button Style="{DynamicResource ButtonStyle}" Margin="40,80,40,0" Click="Button_Click">Guardar</Button>
    </StackPanel>
</Window>
